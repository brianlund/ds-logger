{
  "name": "dreamingspanish-logger",
  "version": "1.2.0",
  "description": "Chrome extension for logging YouTube videos to DreamingSpanish",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "build": "npm run lint && npm run test",
    "package": "zip -r dreamingspanish-logger.zip src/ -x '*.DS_Store*'"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
  },
  "author": "Brian Lund Larsen",
  "license": "MIT"
}