{
  "manifest_version": 3,
  "name": "DreamingSpanish Logger",
  "version": "1.3",
  "description": "Log YouTube videos to your DreamingSpanish account for language learning progress tracking.",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://app.dreaming.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "content.js"
      ]
    },
    {
      "matches": [
        "https://app.dreaming.com/*"
      ],
      "js": [
        "dreaming-spanish-token.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}