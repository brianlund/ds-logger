{
  "manifest_version": 3,
  "name": "Dreaming Logger",
  "version": "1.4.2",
  "description": "Log YouTube videos to your DreamingSpanish account for language learning progress tracking.",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://app.dreaming.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "content.js"
      ]
    },
    {
      "matches": [
        "https://app.dreaming.com/*"
      ],
      "js": [
        "dreaming-spanish-token.js"
      ]
    }
  ],
  "icons": {
    "16": "ds-logger.png",
    "32": "ds-logger.png",
    "48": "ds-logger.png",
    "128": "ds-logger.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "ds-logger.png",
      "32": "ds-logger.png",
      "48": "ds-logger.png",
      "128": "ds-logger.png"
    }
  }
}